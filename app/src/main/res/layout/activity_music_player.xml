<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/song_image_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/pic1" /> <!-- Default image for songs -->

    <TextView
        android:id="@+id/name"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/lato_black"
        android:text="Best Songs \nHeal &amp; Happy \nyour Souls"
        android:textColor="#FFEF62"
        android:textSize="26dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#28FFFFFF" />

    <TextView
        android:id="@+id/song_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_image_view"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato_bold"
        android:text="Song Name"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/song_details_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_name_text_view"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato_bold"
        android:text="Song Name"
        android:textColor="#C8C3C3"
        android:textSize="12sp" />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_details_text_view"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:progressBackgroundTint="#C8C3C3"
        android:progressTint="#FFEF62"
        android:thumbTint="#FFEF62" />

    <TextView
        android:id="@+id/time_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seek_bar"
        android:layout_marginTop="58dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previous_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:src="@drawable/backplay"

            android:text="Previous"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/play_pause_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="40dp"
            android:src="@drawable/play"
            android:text="Previous"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/next_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:rotation="180"
            android:src="@drawable/backplay"
            android:text="Previous"
            app:tint="@color/white" />


    </LinearLayout>

    <ImageView
        android:id="@+id/shuffle_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/seek_bar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/shuffle"
        app:tint="@color/white" />
    <ImageView
        android:id="@+id/playlist_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/seek_bar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="67dp"
        android:src="@drawable/add_list"
        android:tint="@color/white"
         />

    <ImageView
        android:id="@+id/favourite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/seek_bar"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/heart"
        app:tint="@color/white" />


</RelativeLayout>
